
@{
    ViewBag.Title = "MuonSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    angular.module('postApp', [])
     .controller('postController', ['$scope', '$http', '$filter', function ($scope, $http, $filter) {
         //load danh sách đọc giả
         $scope.list_docgia = [];
         $http.get('/Home/thongtindocgia').then(function (response) {
             $scope.list_docgia = response.data;
         }, function (response) {
             //Showing errors
         });
        
         // tìm kiếm thông tin đọc giả
         //array did filter
         $scope.docgia = [];
         $scope.timkiemdocgia = function (value) {
             $scope.docgia = $filter('filter')($scope.list_docgia, value);
         };
        


     }]);
</script>
<script>
    function themsach() {
        var id = document.getElementById("masach").value;
        var soluong = Number(document.getElementById("soluong").value);
        soluong = soluong + 1;
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }
        var ngaymuon = "";
        var ngaymuon2 = "";
        var ngaytra = "";
        var ngaytra2 = "";
        var ngaygioihan = document.getElementById("ngaygioihan").value;
        ngaymuon = dd + '/' + mm + '/' + yyyy;
        ngaymuon2 = mm + '/' + dd + '/' + yyyy;
        var ngay = parseInt(dd) + 20;
        var thang = parseInt(mm);
        var nam = parseInt(yyyy);
        if (ngay > 30) 
        {
            ngay = ngay - 30;
            thang = parseInt(mm) + 1;

        }
        if (thang > 12)
        {
            thang = thang - 12;
            nam = parseInt(yyyy) + 1;
        }
        ngaytra = ngay + '/' + thang + '/' + nam;
        ngaytra2 = thang + '/' + ngay + '/' + nam;
        var thongtinsach = document.getElementById("thongtinsach");
        for (var i = 0; i < thongtinsach.length; i++) {
            var lc = thongtinsach.options[i].text.split(";");
            if (lc[0] == id) {
                // table thông tin sách mượn
                var rows = "";
                rows += "<td>"
                + "<input type='button' onclick='xoadong(this)' value='Xóa'>" + "<input type='hidden' name='iddausach' value='"+lc[2]+"'>" + "</td><td>"
                + +lc[0] + "<input type='hidden' name='ma' value='" + lc[0] + "'>" + "</td><td>"
                + lc[1]+"<input type='hidden' name='ten' value='" + lc[1] + "'>"  + "</td><td>"
                + ngaymuon + "<input type='hidden' name='ngaymuon' value='" + ngaymuon2 + "'>" + "</td><td>"
                + ngaytra + "<input type='hidden' name='ngaytra' value='" + ngaytra2 + "'>" + "</td>";
                var tbody = document.querySelector("#thongtinphieumuon tbody");
                var tr = document.createElement("tr");
                tr.innerHTML = rows;
                tbody.appendChild(tr);
                oFormObject = document.forms['sach'];
                oFormObject.elements["soluong"].value = soluong.toString();
            }
        }
    }
    function xoadong(r) {
        var hoi = confirm("Bạn có chắn chắn muốn xóa");
        if (hoi == true) {
            var i = r.parentNode.parentNode.rowIndex;
            //alert(tongtien1);
            var soluong = Number(document.getElementById("soluong").value);
            soluong = soluong - 1;
            oFormObject = document.forms['sach'];
            oFormObject.elements["soluong"].value = soluong.toString();

            document.getElementById("thongtinphieumuon").deleteRow(i);
            for (var j = i; j < table.rows.length; j++) {
                table.rows[j].cells[0].firstChild.innerHTML = j - 1;
            }


            //document.getElementById("tongtien").innerHTML = tongtien1;  
            // oFormObject = document.forms['congviec'];
            //oFormObject.elements["txttongcong"].value = tongtien1.toString();       
        }
    }
</script>
<link href="~/Content/CSS/muonsach.css" rel="stylesheet" />
<section ng-app="postApp" ng-controller="postController">
    <div id="tieude">
        <h1> Mượn sách</h1>
    </div><hr />
    <div id="huongdansudung">
        <h3>Hướng dẫn sử dụng</h3>
        <h4>
            B1: Thủ thư sẽ kiểm tra thông tin đọc giả bằng cách gõ tên hoặc mã đọc giả vào ô tìm kiếm
            <br />
            B2: Nếu thông tin đọc giả hợp lệ và có thể cho mượn, thủ thư sẽ nhập mã cuốn sách
            vào ô cho phép nhập. Lúc này thủ thư sẽ bấm thêm và cuốn sách sẽđược thêm vào phiếu mượn.<br />
            B3: Thủ thư bấm xuất phiếu mượn để hoàn tất việc mượn sách.

        </h4>
    </div> 
    <form class="form-inline" id="sach" method="post" action="/Home/NhapPhieuMuon">
        <div id="thongtindocgia" class="col-lg-3">
            <h3>Tìm kiếm đọc giả</h3>
            <div class="form-group">
                <label>
                    <input type="text" ng-model="timkiem" name="madocgia" class="form-control" placeholder="Nhập mã độc giả" /><br />
                    <br />
                    <button type="button" class="btn btn-default" ng-click="timkiemdocgia(timkiem)">Tìm kiếm</button>
                </label>
            </div>
            <div class="model-body" ng-repeat="item in docgia">
                <h3>Thông tin đọc giả</h3>
                <p>Tên đọc giả:{{item.HoTen}}</p>
                <p>Ngày hết hạn:{{item.NgayHetHan}}</p>
                <p>Ngày giới hạn:{{item.NgayGioiHan}}<input type="hidden" id="ngaygioihan" value="{{item.NgayGioiHan}}" /></p>
            </div>
        </div>
        <div id="timkiemsach" class="col-lg-9">
            <h3>Nhập thông tin sách</h3>
            <div class="form-group">
                <label class="sr-only" for="exampleInputEmail3">Mã sách</label>
                <input type="text" class="form-control" id="masach" name="masach" placeholder="Mã sách">
                <select id="thongtinsach" style="display:none">
                    @foreach (var item in Model)
                    {
                        <option value="@item.id">
                            @item.id;@item.ten;@item.Id_dausach
                        </option>
                    }
                </select>
            </div>
            <button type="button" class="btn btn-default" onclick="themsach()">Thêm</button>
            <br />
            <h3>Thông tin phiếu mượn</h3>

            <table class="table table-hover" id="thongtinphieumuon" width="400">
                <thead>
                    <tr>
                        <th>Điều khiển</th>
                        <th>Mã sách</th>
                        <th>Tên sách</th>
                        <th>Ngày mượn</th>
                        <th>Ngày phải trả</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <label>
                Tổng số lượng sách:
                <input type="text" class="form-control" id="soluong" name="soluong" disabled />
            </label>
            <label>
                <button class="btn btn-default" id="luuphieumuon" type="submit">Lưu phiếu mượn</button>
            </label>
        </div>
    </form>
</section>
