
@{
    ViewBag.Title = "MuonSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/CSS/muonsach.css" rel="stylesheet" />
<div>
    <h2>Mượn sách</h2>
<br />
  <div class="col-lg-6" id="thongtindocgia" >
      <h2>
          Độc giả
      </h2><br />
      <form class="form-inline">
          <div class="form-group">
              <label class="sr-only" for="exampleInputEmail3">Mã/tên</label>
              <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Nhập mã hoặc tên đọc giả để tìm kiếm">
          </div>
          <button type="submit" class="btn btn-default">Tìm kiếm</button>
      </form>
        <div id="danhsach">
            <h3>Thông tin đọc giả</h3>
            <!--Bảng thông tin đọc giả-->
            <table class="table-hover" width="500" >
                <tr>
                    <th>Mã độc giả</th>
                    <th>Tên độc giả</th>
                    <th>Ngày hết hạn</th>
                    <th>Số lượng giới hạn</th>
                </tr>
            </table>
            <hr />
            <h3>Sách đã mượn</h3>
            <!-- Bảng thông tin sách đọc giả đã mượn-->
            <table class="table-hover" width="500">
             <tr>
                 <th>Tên sách</th>
                 <th>Tác giả</th>
                 <th>Tình trạng</th>
             </tr>
                <tr>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                </tr>
                <tr>
                    <th colspan="2">Sách còn nợ</th>
                    <th>3</th>
                </tr>
            </table>        
        </div>

    </div>
  <div class="col-lg-6" id="danhsachsachmuon">
      <h2>
          Danh sách sách mượn
      </h2>
      <br />
      <!--Nhập thông tin sách-->
      <h2>Thông tin sách</h2>
      <form class="form-group">
          <label>Tên sách/Mã sách
          <input type="text" class="form-control" />
          </label><br />
          <label>
              Số lượng<input type="text" class="form-control" />
          </label><br />
       <button type="button" class="btn btn-default">Thêm</button>
      </form>
      <!--Danh sách sách đang mượn-->
      <h2>Danh sách sách đang mượn</h2>
        <table class="table-hover" width="500">
            <tr>
                <th>Tên sách</th>
                <th>Tác giả</th>
                <th>Số lượng</th>
            </tr>
            <tr>
                <td>1</td>
                <td>2</td>
                <td>3</td>
            </tr>
            <tr>
                <th colspan="2">Tổng số</th>
                <td>1</td>
            </tr>
        </table>
   
    </div>
    </div>


    

