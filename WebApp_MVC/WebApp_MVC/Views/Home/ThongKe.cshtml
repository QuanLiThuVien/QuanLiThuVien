
@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
function xuatexcel(ketqua){
       var htmltable= document.getElementById('ketqua');
       var html = htmltable.outerHTML;
       window.open('data:application/vnd.ms-excel,' + encodeURIComponent(html));
    }
</script>
<div id="tieude">
    <h1>Thống kê số lượng sách mượn đọc giả</h1>
</div>
<div id="huongdansudung">
    <h3>Hướng dẫn sử dụng</h3>
    <h4>
        B1: Thủ thư sẽ nhập ngày bắt đầu và ngày kết thúc cần thống kê.
        <br />
        B2:Thủ thư bấm thống kê để tiến hành thống kê.<br />
        B3: Thủ thư bấm xuất file excel để xuất kết quả thống kê ra file excel.
    </h4>
</div>
<div id="nhapthongtin" class="col-lg-4">
        <h1>Nhập thông tin</h1>
        <form method="post" action="/Home/NhapThongKe">
            <div class="form-group">
                <label>Ngày bắt đầu</label>
                <input type="date" class="form-control" name="ngaybatdau" id="ngaybatdau">
            </div>

            <div class="form-group">
                <label>Ngày kết thúc</label>
                <input type="date" class="form-control" name="ngaykethuc" id="ngayketthuc">
            </div>
            <button type="submit" class="btn btn-default">Thống kê</button>
        </form>
    </div>
<div id="ketqua" class="col-lg-8">
        <h1> Danh sách kết quả</h1>
    <p>Thống kê từ ngày @ViewBag.NgayBatDau đến ngày @ViewBag.NgayKetThuc</p>
        <table class="table" id="ketqua">
            <tr>
                <th>Mã đọc giả</th>
                <th>Tên đọc giả</th>
                <th>Tên sách</th>
                <th>Ngày mượn</th>
                <th>Số lượng</th>
            </tr>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.HoTen</td>
                    <td>@item.Ten</td>
                    <td>@Html.FormatValue(item.NgayMuon,"{0:dd/MM/yyyy}")</td>
                    <td>@item.SoLuong</td>
                </tr>
                    }             
                }
        </table>
       <button id="xuatexcel" onclick="xuatexcel()">Xuất excel</button>
            
    </div>


